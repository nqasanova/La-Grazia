@model Product
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-3">
    <h1 class="pb-3 text-primary">Create</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-sm-6 ">
                <label class="font-18" asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control input-rounded" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-6 ">
                <label class="font-18" asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control input-rounded" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="RegionId">Region</label>
                <select asp-for="RegionId" id="RegionId" class="form-control input-rounded" asp-items="@(new SelectList(ViewBag.Regions,"Id","Name"))">
                </select>
            </div>
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="VarietyId">Variety</label>
                <select asp-for="VarietyId" id="VarietyId" class="form-control input-rounded" asp-items="@(new SelectList(ViewBag.Varieties,"Id","Name"))">
                </select>
            </div>
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="TypeId">Type</label>
                <select asp-for="TypeId" id="TypeId" class="form-control input-rounded" asp-items="@(new SelectList(ViewBag.Types,"Id","Name"))">
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="Price">Price</label>
                <input asp-for="Price" class="form-control input-rounded" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="SalePrice">SalePrice</label>
                <input asp-for="SalePrice" class="form-control input-rounded" placeholder="SalePrice">
                <span class="text-danger" asp-validation-for="SalePrice"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="font-18" asp-for="Rate">Rate</label>
                <input asp-for="Rate" class="form-control input-rounded" placeholder="Rate">
                <span class="text-danger" asp-validation-for="Rate"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 d-flex justify-content-center mt-5">
                <label class="font-18 ui-checkbox ui-checkbox-info" asp-for="IsFeatured">
                    <input asp-for="IsFeatured">
                    <span class="input-span"></span>IsFeatured
                </label>
                <span class="text-danger" asp-validation-for="IsFeatured"></span>
            </div>
            <div class="form-group col-md-6">
                <label class="font-18" asp-for="ImageFiles">ImageFiles</label>
                <input asp-for="ImageFiles" class="form-control input-rounded" placeholder="ImageFiles">
                <span class="text-danger" asp-validation-for="ImageFiles"></span>
            </div>
        </div>
        <div class="form-group pt-5 text-center">
            <button type="submit" class="btn btn-primary btn-rounded font-20 w-25 text-center">Create</button>
        </div>
    </form>
</div>