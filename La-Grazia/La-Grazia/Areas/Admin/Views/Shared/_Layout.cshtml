@inject UserManager<User> userManager
@{
    User admin = User.Identity.IsAuthenticated ? userManager.Users.FirstOrDefault(x => x.Email == User.Identity.Name) : null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>La Grazia - Admin Panel</title>
    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/manage/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/manage/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="icon" href="https://demo-40.woovinapro.com/wp-content/uploads/2020/07/favi-icon.png" sizes="192x192">
    <link href="~/manage/vendors/themify-icons/css/themify-icons.css" rel="stylesheet" />

    <!-- PLUGINS STYLES-->
    <link href="~/manage/vendors/jvectormap/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
    <link href="~/manage/vendors/DataTables/datatables.min.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <link href="~/manage/css/main.min.css" rel="stylesheet" />
    <!-- PAGE LEVEL STYLES-->
</head>
<body class="fixed-navbar">
    <div class="page-wrapper">
        <!-- START HEADER-->
        <header class="header">
            <div class="page-brand">
                <a class="link" asp-action="index" asp-controller="dashboard">
                    <span class="brand py-3">
                        <img style="width:130px" src="~/assets/images/ulvino-header-logo.png" />
                    </span>
                    <span class="brand-mini">AC</span>
                </a>
            </div>
            <div class="flexbox flex-1">
                <!-- START TOP-LEFT TOOLBAR-->
                <ul class="nav navbar-toolbar">
                    <li>
                        <a class="nav-link sidebar-toggler js-sidebar-toggler"><i class="ti-menu"></i></a>
                    </li>
                    <li>
                        <form class="navbar-search" action="javascript:;">
                            <div class="rel">
                                <span class="search-icon"><i class="ti-search"></i></span>
                                <input class="form-control" placeholder="Search here...">
                            </div>
                        </form>
                    </li>
                </ul>
                <!-- END TOP-LEFT TOOLBAR-->

                <!-- START TOP-RIGHT TOOLBAR-->
                <ul class="nav navbar-toolbar">
                    <li class="dropdown dropdown-inbox">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="badge badge-primary envelope-badge"></span>
                        </a>
                    </li>
                    <li class="dropdown dropdown-notification">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bell-o rel"><span class="notify-signal"></span></i></a>
                    </li>
                    <li class="dropdown dropdown-user">
                        <a class="nav-link dropdown-toggle link" data-toggle="dropdown">
                            <img src="~/manage/img/admin-avatar.png" />
                            <span></span>@admin.Email<i class="fa fa-angle-down m-l-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" asp-action="index" asp-controller="dashboard"><i class="fa fa-user"></i>Profile</a>
                            <li class="dropdown-divider"></li>
                            <a class="dropdown-item" asp-action="logout" asp-controller="account"><i class="fa fa-power-off"></i>Logout</a>
                        </ul>
                    </li>
                </ul>
                <!-- END TOP-RIGHT TOOLBAR-->
            </div>
        </header>
        <!-- END HEADER-->

        <!-- START SIDEBAR-->
        <nav class="page-sidebar" id="sidebar">
            <div id="sidebar-collapse">
                <div class="admin-block d-flex align-items-center">
                    <div>
                        <img src="~/manage/img/admin-avatar.png" width="45px" />
                    </div>
                    <div class="admin-info">
                        <div class="font-strong">@admin.Email</div>
                    </div>
                </div>
                <ul class="side-menu metismenu">
                    <li>
                        <a class="active" asp-action="index" asp-controller="dashboard">
                            <i class="sidebar-item-icon fa fa-th-large"></i>
                            <span class="nav-label">Dashboard</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="admin">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Admins</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="role">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Roles</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="about">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">About</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="blog">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Blog</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="collaboration">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Collaboration</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="faq">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">FAQ</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="feature">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Feature</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="order">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Order</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="product">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Products</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="size">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Size</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="review">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Review</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="setting">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Setting</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="slider">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Slider</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="team">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Team</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="type">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Type</span>
                        </a>
                    </li>

                    <li>
                        <a asp-action="index" asp-controller="variety">
                            <i class="sidebar-item-icon fa fa-file-text"></i>
                            <span class="nav-label">Variety</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- END SIDEBAR-->

        <div class="content-wrapper" style="min-height:900px">
            @RenderBody()
        </div>
    </div>

    <!-- CORE PLUGINS-->
    <script src="~/manage/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/metisMenu/dist/metisMenu.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS-->
    <script src="~/manage/vendors/chart.js/dist/Chart.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/jvectormap/jquery-jvectormap-2.0.3.min.js" type="text/javascript"></script>
    <script src="~/manage/vendors/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
    <script src="~/manage/vendors/jvectormap/jquery-jvectormap-us-aea-en.js" type="text/javascript"></script>

    <!-- CORE SCRIPTS-->
    <script src="~/manage/js/app.min.js" type="text/javascript"></script>
    <script src="~/manage/js/custom.js" type="text/javascript"></script>
    <!-- PAGE LEVEL SCRIPTS-->
    @RenderSection("dashboardjs", required: false)
    @RenderSection("tablejs", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>
</body>
</html>