@model Setting
@{
    ViewData["Title"] = "Index";
}

<!-- Page Title Area Start Here -->
<section class="page-title" style="background-image: url('./assets/images/Maison\ Francis\ Kurkdjian\ 15.36.46.jpg');">
    <div class="container">
        <div class="row">
            <h1>CONTACT</h1>
            <div class="page-tab">
                <a asp-controller="home" asp-action="index">HOME</a>
                <i class="fas fa-angle-right"></i>
                <span>CONTACT</span>
            </div>
        </div>
    </div>
</section>
<!-- Page Title Area End Here -->

<!-- Contact Area Start Here -->
<section class="contact-main">
    <div class="container">
        <div class="row">
            <div class="col-12 contact-form">
                <h3>SEND US YOUR MESSAGE</h3>
                <form action="">
                    <div class="contact-form-item">
                        <label for="">
                            Full Name
                            <span>*</span>
                        </label>
                        <input type="text" name="" id="" placeholder="Full Name">
                    </div>
                    <div class="contact-form-item">
                        <label for="">
                            Email
                            <span>*</span>
                        </label>
                        <input type="text" name="" id="" placeholder="Email">
                    </div>
                    <div class="contact-form-item">
                        <label for="">
                            Subject
                        </label>
                        <input type="text" name="" id="" placeholder="Subject">
                    </div>
                    <div class="contact-form-item">
                        <label for="">
                            Message
                        </label>
                        <textarea name="" id="" cols="30" rows="10" placeholder="Add your message"></textarea>
                    </div>
                    <button type="submit">SEND</button>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Contact Area Start Here -->

