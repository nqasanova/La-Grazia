@model List<WishlistProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<!-- Page Title Area Start Here -->
<section class="page-title" style="background-image: url('./assets/images/Maison\ Francis\ Kurkdjian\ 15.36.46.jpg');">
    <div class="container">
        <div class="row">
            <h1>WISHLIST</h1>
            <div class="page-tab">
                <a asp-controller="home" asp-action="index">HOME</a>
                <i class="fas fa-angle-right"></i>
                <span>WISHLIST</span>
            </div>
        </div>
    </div>
</section>
<!-- Page Title Area End Here -->

<!-- Wishlist Area Start Here -->
<section class="wishlist-main">
    <div class="container">
        <div class="row wishlist-page-box">
            <div class="container">
                @foreach (var item in Model)
                {
                    <div class=" row wishlist-page-box-item" id="@item.ProductId">
                        <div class="col-1">
                            <div class="wishlist-page-img">
                                <a asp-controller="product" asp-action="detail" asp-route-id="@item.ProductId">
                                    <img src="~/uploads/product/@item.Image" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-6">
                            <a asp-controller="product" asp-action="detail" asp-route-id="@item.ProductId" class="wishlist-page-product-name">
                                @item.Name
                            </a>
                        </div>
                        <div class="col-2">
                            <p class="wishlist-page-product-price"><span>$</span> <span>@item.Price.00</span></p>
                        </div>

                        <div class="col-2">
                            <a href="" class="button add-basket-btn " data-id="@item.ProductId">Add to Cart</a>
                        </div>
                        <div class="col-1">
                            <a href="" class="remove-product-icon delete-wishlist-item" data-id="@item.ProductId" data-target="@item.ProductId">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                }

                <div class="wishlist-page-box-bottom">
                    <a asp-controller="product" asp-action="index" class="button ">Continue Shopping</a>
                    <a asp-controller="cart" asp-action="index" class="button ">Go Cart</a>
                </div>

                <div class="wishlist-empty-box">
                    <h2>Your Wishlist is Empty</h2>
                    <a asp-controller="product" asp-action="index" class="button ">Go Shop</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Wishlist Area End Here -->

@section wishlistjs
{
    <script src="~/assets/js/wishlist.js"></script>
}