    <link rel="stylesheet" href="./assets/css/contact.css">
    <link rel="stylesheet" href="./assets/css/wishlist.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    @RenderSection("profileStyles", required: false)
    <title>La Grazia</title>
</head>
<body>
    <!-- Header Area Start Here -->
    <header>
        <nav>
            <label for="toggler"><i class="fa fa-bars"></i></label>
            <input type="checkbox" id="toggler" name="">
            <div class="header-fixed">
                <ul class="list">
                    <li>
                        <a href="">
                            <i class=" fas fa-user"></i>
                        </a>
                        <a asp-controller="wishlist" asp-action="index">
                            <i class="far fa-heart"></i>
                            <span class="icon-count wishlist-total-count">@wishlistItems.Count()</span>
                            <input class="hidden-wishlist-count" hidden value="@wishlistItems.Count()">
                        </a>
                    </li>

                    <li class="account-box-main ">
                        <div class="my-account-box">
                            <p>MY ACCOUNT</p>
                            @if (member != null)
                            {
                                <a asp-controller="account" asp-action="profile"><span>@member.Email</span></a>
                                <a asp-controller="account" asp-action="logout"><span>Sign out</span></a>
                            }

                            else
                            {
                                <a data-bs-toggle="modal" data-bs-target="#loginModal" class="show-login-modal">
                                    <span>Login</span>
                                </a>
                                <a data-bs-toggle="modal" data-bs-target="#registerModal" class="show-register-modal">
                                    <span>Register</span>
                                </a>
                            }
                        </div>
                    </li>

                    <li><a asp-controller="home" asp-action="index">HOME</a></li>
                    <li><a asp-controller="about" asp-action="index">ABOUT US</a></li>
                    <li><a asp-controller="product" asp-action="index">SHOP</a></li>
                    <li>
                        <a asp-controller="home" asp-action="index">
                            <img class="header-logo" src="~/assets/images/Logo.png" alt="">
                        </a>
                    </li>
                    <li><a asp-controller="faq" asp-action="index">FAQ</a></li>
                    <li><a asp-controller="blog" asp-action="index">BLOG</a></li>
                    <li><a asp-controller="contact" asp-action="index">CONTACT US</a></li>
                    <li>
                        <a class="searchModal" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search"></i>
                        </a>
                        <a asp-controller="cart" asp-action="index">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="icon-count basket-total-count">@basketItems.Count()</span>
                        </a>
                    </li>
                    <li class="cart-box show-basket-box ">
                        @await Html.PartialAsync("_BasketPartial", basketItems)

                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Header Area End Here -->

    <!-- Scroll Top Area Start Here -->
    <a href="" class="scroll-top ">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Scroll Top Area End Here -->

    @RenderBody()

    <!-- Footer Area Start Here -->
    <footer style="background-image: url(./assets/images/FooterMaison.webp);">
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <h3>INFORMATION</h3>
                        <a href="./about.html" class="footer-item">∘ About Us</a>
                        <a href="./shop.html" class="footer-item">∘ Shop</a>
                        <a href="./faq.html" class="footer-item">∘ FAQ</a>
                        <a href="./blog.html" class="footer-item">∘ Blog</a>
                        <a href="./contact.html" class="footer-item">∘ Contact</a>
                    </div>
                    <div class="col-2">
                        <h3>MY ACCOUNT</h3>
                        <a href="" class="footer-item">∘ Order Tracking</a>
                        <a href="./cart.html" class="footer-item">∘ Cart</a>
                        <a href="./checkout.html" class="footer-item">∘ Checkout</a>
                        <a href="./wishlist.html" class="footer-item">∘ Wishlist</a>
                        <a href="./account.html" class="footer-item">∘ My Account</a>
                    </div>
                    <div class="col-5">
                        <h3>GENERAL</h3>
                        <div class="footer-icon-box">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Stazione Roma Termini, Piazza dei Cinquecento, <br> 00185, Roma</span>
                        </div>
                        <div class="footer-icon-box">
                            <i class="fas fa-phone-alt"></i>
                            <span>(+000) 000 000 0000</span>
                        </div>
                        <div class="footer-icon-box">
                            <i class="fas fa-envelope"></i>
                            <span>lagrazia@gmail.com</span>
                        </div>
                        <div class="footer-icon-box">
                            <i class="fas fa-clock"></i>
                            <span>Monday - Saturday, 7 am to 9 pm</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row footer-bottom-box">
                    © Copyright 2023 <a href="">La Grazia</a>- All Rights Reserved - Powered by<a href="">La Grazia Theme.</a>
                    <span>
                        <img src="./assets/images/payment.png" alt="">
                    </span>
                </div>
            </div>
        </div>

    </footer>
    <!-- Footer Area End Here -->

    <!-- Modal For Login Area Start Here -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Log In</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="form-imput-item">
                            <input type="text" placeholder="Username">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="form-imput-item">
                            <input type="password" placeholder="Password">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <div class="form-remember-me">
                            <label for="">
                                <input type="checkbox" name="" id="">
                                Remember Me
                            </label>
                        </div>
                        <button type="submit">LOGIN</button>
                        <a href="" class="forgot-password">Forgot your password?</a>
                    </form>
                </div>
                <div class="modal-footer">
                    <p>Not a member?</p>
                    <a data-bs-toggle="modal" data-bs-target="#registerModal">REGISTER</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal For Login Area End Here -->

    <!-- Modal For Register Area Start Here -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModallLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title create-account" id="registerModalLabel">Create An Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="">
                        <div class="form-imput-item">
                            <input type="text" placeholder="Username">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <div class="form-imput-item">
                            <input type="email" placeholder="Email">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <div class="form-imput-item">
                            <input type="password" placeholder="Password">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <div class="form-imput-item">
                            <input type="password" placeholder="Confirm Password">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <button type="submit">REGISTER</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <p>Already a member?</p>
                    <a data-bs-toggle="modal" data-bs-target="#loginModal">SIGN IN</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal For Register Area End Here -->

    <!-- Modal For Product Area Start Here -->
    <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-6 shop-detail-left">
                                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img src="./assets/images/Fragrance 1.webp" class="d-block w-100" alt="...">
                                        </div>
                                        <div class="carousel-item">
                                            <img src="./assets/images/Fragrance1 Hover.webp" class="d-block w-100" alt="...">
                                        </div>
                                    </div>
                                    <button class="carousel-control-prev" type="button"
                                            data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                            data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>

                            </div>
                            <div class="col-6 shop-detail-right">
                                <h2>BACCARAT ROUGE 540 EXTRAIT DE PARFUM</h2>
                                <p class="price">€210.00</p>
                                <div class="product-desc">
                                    Baccarat Rouge 540 Extrait de Parfum de Maison Francis Kurkdjian est un parfum Ambre Floral pour homme et femme.
                                    Baccarat Rouge 540 Extrait de Parfum a été lancé en 2017. Le nez derrière ce parfum est Francis Kurkdjian. Les notes de
                                    tête sont Amande amère et Safran; les notes de coeur sont Jasmin d'Egypte et Cèdre; les notes de fond sont Ambre gris,
                                    Notes boisées et Musc.
                                </div>
                                <div class="product-quantity-box">
                                    <div class="product-quantity">
                                        <a href="" class="minus">-</a>
                                        <span class="quantity-count">1</span>
                                        <a href="" class="plus">+</a>
                                    </div>
                                    <button class="add-button add-cart">ADD TO CART</button>
                                    <button class="add-button">WISHLIST</button>
                                </div>
                                <hr>
                                <div class="shop-details-box">
                                    <p>Category:</p>
                                    <span>Baccarat</span>
                                </div>
                                <div class="shop-details-box">
                                    <p>Tag:</p>
                                    <span>Tag-1</span>
                                </div>
                                <div class="product-rating-box">
                                    <div class="product-rate">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <a href="" class="product-review-count">
                                        ( 5 Reviews )
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal For Product Area End Here -->

    <!-- Modal For Search Area Start Here -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <input type="search" name="" id="" placeholder="Search...">
                </div>
            </div>
        </div>
    </div>
    <!-- Modal For Search Area End Here -->

